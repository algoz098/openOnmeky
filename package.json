{
  "name": "openonmeky",
  "version": "0.0.1",
  "description": "Open-source social media management platform with AI-powered content generation",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "npm run compile --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "test": "npm run test --workspace=backend",
    "test:backend": "npm run test --workspace=backend",
    "lint": "npm-run-all lint:backend lint:frontend",
    "lint:backend": "npm run prettier --workspace=backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "migrate": "npm run migrate --workspace=backend",
    "migrate:make": "npm run migrate:make --workspace=backend",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "keywords": [
    "social-media",
    "ai",
    "content-generation",
    "feathersjs",
    "quasar",
    "vue"
  ],
  "author": "OpenOnmeky Team",
  "license": "MIT",
  "engines": {
    "node": ">= 24.7.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
